<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"

    tools:context=".user_login">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp">

            <View
                android:id="@+id/top_view"
                android:layout_width="match_parent"
                android:layout_height="560dp"
                android:background="@drawable/bg_design"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="136dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/roboto_light"
                android:background="@drawable/et_2"
                android:drawablePadding="20dp"
                android:ems="10"
                android:gravity="left"
                android:hint="Name As Per Adhar"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textColorHint="#158C2E"
                android:paddingStart="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_relation"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="28dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/roboto_light"
                android:background="@drawable/et_2"
                android:drawablePadding="20dp"
                android:ems="10"
                android:gravity="left"
                android:hint="Relation With User"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textColorHint="#158C2E"
                android:paddingStart="15dp"
                tools:layout_editor_absoluteX="28dp"
                tools:layout_editor_absoluteY="168dp"
                app:layout_constraintTop_toBottomOf="@+id/et_name"/>

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/et_2"
                android:gravity="left"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:fontFamily="@font/roboto_light"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textColorHint="#158C2E"
                android:paddingStart="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_proof" />

            <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/et_2"
                android:gravity="left"
                android:hint="Address"
                android:inputType="text"
                android:fontFamily="@font/roboto_light"
                android:padding="10dp"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textColorHint="#158C2E"
                android:paddingStart="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.733"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_email" />

            <EditText
                android:id="@+id/et_proof"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/et_2"
                android:gravity="left"
                android:hint="Adhar Card Number"
                android:fontFamily="@font/roboto_light"
                android:inputType="number"
                android:padding="10dp"
                android:paddingLeft="10dp"
                android:paddingStart="15dp"
                android:textColor="#000000"
                android:textColorHint="#158C2E"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.733"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_relation" />

            <Button
                android:id="@+id/owner_btn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/btn_green"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_light"
                android:text="Submit"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_lastSeen_phone" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/roboto_thin"
                android:text="Missing Phone Details"
                android:textColor="#158C2E"
                android:textSize="32sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/top_view" />

            <EditText
                android:id="@+id/et_missingPh"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edit_text_background"
                android:hint="Mobile Number"
                android:inputType="number"
                android:fontFamily="@font/roboto_light"
                android:padding="10dp"
                android:paddingLeft="10dp"

                android:paddingStart="15dp"
                app:layout_constraintTop_toBottomOf="@id/textView7" />

            <EditText
                android:id="@+id/et_serialnumber"
                android:layout_width="349dp"
                android:layout_height="55dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="36dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edit_text_background"
                android:hint="Mobile Serial Number"
                android:inputType="number"
                android:fontFamily="@font/roboto_light"
                android:padding="10dp"
                android:paddingLeft="10dp"
                android:paddingStart="15dp"

                app:layout_constraintBottom_toTopOf="@+id/et_mobileModel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_missingPh" />

            <EditText
                android:id="@+id/et_mobileModel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edit_text_background"
                android:hint="Mobile Model and Company"
                android:fontFamily="@font/roboto_light"
                android:inputType="text"
                android:padding="10dp"
                android:paddingLeft="10dp"
                android:paddingStart="15dp"

                app:layout_constraintTop_toBottomOf="@id/et_serialnumber" />

            <EditText
                android:id="@+id/et_lastSeen_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edit_text_background"
                android:hint="Missing Date"
                android:fontFamily="@font/roboto_light"
                android:inputType="text"
                android:padding="10dp"
                android:paddingLeft="10dp"
                android:paddingStart="15dp"

                app:layout_constraintTop_toBottomOf="@id/et_mobileModel" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="52dp"
                android:text="Owner's Information"
                android:fontFamily="@font/roboto_thin"
                android:textColor="@color/white"
                android:textSize="35sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/top_view" />

            <!--            <Spinner-->
<!--                android:id="@+id/spinner2"-->
<!--                android:layout_width="409dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginStart="20dp"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:layout_marginEnd="20dp"-->
<!--                android:layout_marginBottom="10dp"-->
<!--                app:layout_constraintBottom_toTopOf="@+id/et_proof"-->
<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                app:layout_constraintStart_toStartOf="parent"-->
<!--                android:textColorHint="@color/colorAccent"-->
<!--                app:layout_constraintTop_toBottomOf="@+id/et_name" />-->
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
