<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"

    tools:context=".user_login">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="180dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/green_cir" />

    <EditText
        android:id="@+id/et_reg_no"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="232dp"
        android:layout_marginRight="30dp"
        android:paddingStart="15dp"
        android:background="@drawable/edit_text_background"
        android:drawablePadding="20dp"
        android:ems="10"
        android:gravity="left"
        android:hint="Registration Number"
        android:inputType="text"
        android:padding="10dp"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:fontFamily="@font/roboto_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_details"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="28dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edit_text_background"
        android:gravity="left"
        android:hint="Other Relevant Details"
        android:inputType="text"
        android:padding="10dp"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:fontFamily="@font/roboto_light"
        android:paddingStart="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_model" />

    <EditText
        android:id="@+id/et_last_seen"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="150dp"
        android:paddingStart="15dp"
        android:background="@drawable/edit_text_background"
        android:gravity="left"
        android:hint="Last Seen (Date)"
        android:enabled="false"
        android:padding="10dp"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:fontFamily="@font/roboto_light"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_reg_no" />

    <EditText
        android:id="@+id/et_model"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edit_text_background"
        android:gravity="left"
        android:paddingStart="15dp"
        android:hint="Type and Model"
        android:inputType="text"
        android:padding="10dp"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:fontFamily="@font/roboto_light"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_last_seen" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="308dp"
        android:layout_height="45dp"
        android:layout_marginTop="148dp"
        android:text="Missing Vehicle Details"
        android:fontFamily="@font/roboto_thin"

        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/vehicle_btn"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/btn_green"
        android:fontFamily="@font/roboto_light"
        android:text="Submit"
        android:textSize="21sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_details"
        />

    <Button
        android:id="@+id/btn_dt_sel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="308dp"
        android:background="@drawable/btn_green"
        android:fontFamily="@font/roboto_light"
        android:text="select"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.907"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />


</androidx.constraintlayout.widget.ConstraintLayout>
